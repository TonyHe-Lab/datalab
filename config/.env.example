## Example environment variables for ETL and AI integration
# Copy to config/.env and fill with real values (do NOT commit secrets)

# Snowflake
SNOWFLAKE_ACCOUNT=your_account.snowflakecomputing.com
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=
SNOWFLAKE_AUTHENTICATOR=snowflake  # or externalbrowser for SSO, oauth for OAuth flows
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=MY_DB
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=

# Postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=your_db
POSTGRES_USER=your_user
POSTGRES_PASSWORD=
POSTGRES_SSLMODE=prefer

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=your-chat-deployment
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=your-embedding-deployment
AZURE_OPENAI_SAFE_MODE=false  # when true, use rule-based fallback instead of remote calls

# ETL Configuration
ETL_BATCH_SIZE=1000
ETL_MAX_RETRIES=5
ETL_RETRY_BACKOFF_INITIAL_SECONDS=1
ETL_RETRY_BACKOFF_MAX_SECONDS=60

# Backfill / Checkpointing
BACKFILL_CHECKPOINT_INTERVAL_ROWS=10000

# Logging / Monitoring
LOG_LEVEL=INFO
LOG_REDACT_PII=true  # if true, scrub PII from logs and error contexts
